@model PHONEBOOK.Models.Customer

@{
    ViewBag.Title = "Delete";
}

<style>

    .body-content {
        margin-top: -50px;
    }

    .grid-container {
        background-color: bisque;
        box-shadow: 3px 3px lightgray;
        border-radius: 3px;
        width: 500px;
        margin: 0 auto;
    }

    h2, h3, h4 {
        font-family: Georgia, Times, 'Times New Roman', serif;
        text-align: center;
        padding-top: 10px;
    }

    a:hover {
        text-decoration: none;
    }

    .btn-info > a {
        color: #fff;
        text-decoration: none;
        border-radius: 3px;
    }

    .btn-info {
        display: flex;
        float: left;
        margin-left: 8px;
        margin-bottom: 8px;
        background-color: #337ab7;
    }

        .btn-info:hover {
            color: #fff;
            background-color: #286090;
            border-color: #204d74;
        }

    .btn-danger {
        margin-bottom: 8px;
        margin-left: 8px;
    }

    .btn-success {
        margin-left: 8px;

    }
</style>

